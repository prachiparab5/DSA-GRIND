import java.util.*;

public class largest_num_in_array {

    public static int largest_num(int num[]) {
        int largest = Integer.MIN_VALUE;

        for (int i = 0; i < num.length; i++) {
            if (num[i] > largest) {
                largest = num[i];
            }
        }

        return largest; // must be inside the method block
    }

    public static void main(String[] args) {
        int num[] = { 1, 2, 6, 3, 5 };
        System.out.println("Largest number in an array is: " + largest_num(num));
    }
}
